<resources>
    <!--通用主题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    去除ActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    toolbar样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!--    去除ActionBar-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    定义一个小文字样式-->
    <style name="TextSmall">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--    登录，注册界面输入框样式-->
    <style name="EditText">
        <!--    图标到内容的间距-->
        <item name="android:drawablePadding">@dimen/padding_meddle</item>
        <!--    左侧图标-->
        <item name="android:drawableLeft">@drawable/ic_phone</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <!--    最大显示1行-->
        <item name="android:lines">1</item>
<!--        <item name="android:layout_marginTop">@dimen/padding_meddle</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>